<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iosched="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".PlaceActivity">
    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/container_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar_home" />

            </LinearLayout>
            <FrameLayout
                android:id="@+id/container_body"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <ScrollView
                android:fadingEdge="none"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/scroll_view"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="?attr/actionBarSize">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.CardView
                        android:onClick="showDetails"
                        iosched:cardBackgroundColor="@color/card1"
                        iosched:cardCornerRadius="4dp"
                        iosched:cardElevation="@dimen/card_elevation"
                        android:id="@+id/card1"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:maxHeight="50dp"
                                android:weightSum="3"
                                android:layout_width="match_parent">

                                <ImageView
                                    android:scaleType="fitCenter"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_cloudy"
                                    android:id="@+id/stattoday1"
                                    android:paddingTop="8dp" />

                                <TextView
                                    android:layout_weight="2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/t1"
                                    android:textColor="#fff"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="4dp"
                                    android:paddingTop="5dp"
                                    android:gravity="right"
                                    android:textSize="35dp"
                                    android:text="22°"
                                    android:layout_marginLeft="61dp"
                                    android:layout_marginStart="61dp" />
                            </LinearLayout>
                            <TextView
                                android:textColor="#fff"
                                android:id="@+id/l1"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:text="London"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_large"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="showDetails"
                        iosched:cardBackgroundColor="@color/card2"
                        iosched:cardCornerRadius="4dp"
                        iosched:cardElevation="@dimen/card_elevation"
                        android:id="@+id/card2"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:maxHeight="50dp"
                                android:weightSum="3"
                                android:layout_width="match_parent">

                                <ImageView
                                    android:scaleType="fitCenter"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_cloudy"
                                    android:id="@+id/stattoday2"
                                    android:paddingTop="8dp" />

                                <TextView
                                    android:layout_weight="2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/t2"
                                    android:textColor="#fff"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="4dp"
                                    android:paddingTop="5dp"
                                    android:gravity="right"
                                    android:textSize="35dp"
                                    android:text="22°"
                                    android:layout_marginLeft="61dp"
                                    android:layout_marginStart="61dp" />
                            </LinearLayout>
                            <TextView
                                android:textColor="#fff"
                                android:id="@+id/l2"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:text="Berlin"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_large"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="showDetails"
                        iosched:cardBackgroundColor="@color/card3"
                        iosched:cardCornerRadius="4dp"
                        iosched:cardElevation="@dimen/card_elevation"
                        android:id="@+id/card3"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:maxHeight="50dp"
                                android:weightSum="3"
                                android:layout_width="match_parent">

                                <ImageView
                                    android:scaleType="fitCenter"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_cloudy"
                                    android:id="@+id/stattoday3"
                                    android:paddingTop="8dp" />

                                <TextView
                                    android:layout_weight="2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/t3"
                                    android:textColor="#fff"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="4dp"
                                    android:paddingTop="5dp"
                                    android:gravity="right"
                                    android:textSize="35dp"
                                    android:text="22°"
                                    android:layout_marginLeft="61dp"
                                    android:layout_marginStart="61dp" />
                            </LinearLayout>
                            <TextView
                                android:textColor="#fff"
                                android:id="@+id/l3"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:text="Havanna"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_large"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="showDetails"
                        iosched:cardBackgroundColor="@color/card4"
                        iosched:cardCornerRadius="4dp"
                        iosched:cardElevation="@dimen/card_elevation"
                        android:id="@+id/card4"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:maxHeight="50dp"
                                android:weightSum="3"
                                android:layout_width="match_parent">

                                <ImageView
                                    android:scaleType="fitCenter"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_cloudy"
                                    android:id="@+id/stattoday4"
                                    android:paddingTop="8dp" />

                                <TextView
                                    android:layout_weight="2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/t4"
                                    android:textColor="#fff"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="4dp"
                                    android:paddingTop="5dp"
                                    android:gravity="right"
                                    android:textSize="35dp"
                                    android:text="22°"
                                    android:layout_marginLeft="61dp"
                                    android:layout_marginStart="61dp" />
                            </LinearLayout>
                            <TextView
                                android:textColor="#fff"
                                android:id="@+id/l4"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:text="New York"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_large"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:onClick="showDetails"
                        iosched:cardBackgroundColor="@color/colorPrimaryDark"
                        iosched:cardCornerRadius="4dp"
                        iosched:cardElevation="@dimen/card_elevation"
                        android:id="@+id/card5"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:padding="8dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="8dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:maxHeight="50dp"
                                android:weightSum="3"
                                android:layout_width="match_parent">

                                <ImageView
                                    android:scaleType="fitCenter"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/ic_cloudy"
                                    android:id="@+id/stattoday5"
                                    android:paddingTop="8dp" />

                                <TextView
                                    android:layout_weight="2"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:id="@+id/t5"
                                    android:textColor="#fff"
                                    android:paddingLeft="8dp"
                                    android:paddingRight="8dp"
                                    android:paddingBottom="4dp"
                                    android:paddingTop="5dp"
                                    android:gravity="right"
                                    android:textSize="35dp"
                                    android:text="22°"
                                    android:layout_marginLeft="61dp"
                                    android:layout_marginStart="61dp" />
                            </LinearLayout>
                            <TextView
                                android:textColor="#fff"
                                android:id="@+id/l5"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:paddingTop="4dp"
                                android:paddingBottom="4dp"
                                android:text="Paris"
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_large"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </ScrollView>
            <LinearLayout
                android:id="@+id/error"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.WelcomeActivity">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#e5e5e5">

                    <ImageView
                        android:src="@drawable/app_logo"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        android:scaleType="fitCenter"
                        android:tint="#7000"
                        android:layout_gravity="center|top" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingTop="100dp"
                            android:clipToPadding="false">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#00ffffff">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical"
                                    android:padding="24dp">

                                    <TextView
                                        android:text="Fehler"
                                        android:textAlignment="center"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorPrimary"
                                        android:textSize="@dimen/text_size_xlarge"/>

                                    <TextView
                                        android:textAlignment="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="16dp"
                                        android:autoLink="web"
                                        android:text="@string/unknown_error"
                                        android:textColor="@color/body_text_2"
                                        android:textSize="@dimen/text_size_medium" />
                                </LinearLayout>
                            </RelativeLayout>
                        </FrameLayout>
                    </ScrollView>
                </FrameLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/loadingtitle"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="100dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="45dp"
                    android:text="Laden..."
                    android:textStyle="bold"/>

                <TextView
                    android:layout_below="@id/loadingtitle"
                    android:layout_centerInParent="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:text="Bitte warten..." />

                <ProgressBar
                    android:layout_below="@id/loadingtitle"
                    android:layout_centerInParent="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/progressBarq"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.v4.widget.DrawerLayout>